<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
<!--    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />-->
    <!-- For AccessibilityService -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/tell_me_why_high_resolution_logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tell_me_why"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ristricotr">
        <service
            android:name=".presentation.ui.overlay.AppUsageAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
        android:exported="false"> <!--  Consider if this service needs to be exported -->
        <intent-filter>@
            <action android:name="android.accessibilityservice.AccessibilityService" />
        </intent-filter>
        <meta-data
            android:name="android.accessibilityservice"
            android:resource="@xml/accessibility_service_config" />
    </service>

        <service
            android:name=".presentation.ui.overlay.JustificationOverlayService"
            android:exported="false" />
        <activity android:name=".presentation.ui.log.LogActivity" />

        <activity
        android:name=".presentation.ui.main.MainActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ristricotr">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
</application>

    </manifest>
